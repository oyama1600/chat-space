.chat-main
  .main-header
    .main-header__left-box
      %h2{ class:'main-header__left-box__current-group',data:{group_id:'#'}}
        takeda
      %ul.main-header__left-box__member-list
        Member:
        %li.main-header__left-box__member-list__member
        test 
    =link_to "#" do
      .main-header__edit-btn Edit
  .messages
    %div{ class:'message', data:{message_id:'#'}}
      .message__upper-info
        %p.message__upper-info__talker test
        %p.message__upper-info__date 2020/3/16(mon) 17:40:00
      %p.message__text welcome to JAPAN
    %div{ class:'message', data:{message_id:'#'}}
      .message__upper-info
        %p.message__upper-info__talker test
        %p.message__upper-info__date 2020/3/16(mon) 17:40:40
      %p.message__text thank you


  .form
    %form{ class:'new_message', id:'new_message', enctype:'multipart/form-data', action:'#', accept:{charest:'UTF-8'}, method:'post'}
      .input-box
        %input{ placeholder:'type a message', class:'input-box__text', type:'text', name:'message[content]', id:'message_content'}
        %label{ class:'input-box__image', for:'message_image'}
          %i{ class:'far fa-image'}
          %input{ class:'input-box__image__file', type:'file', name:'message[image]', id:'message_image'}
      %input{ type:'submit', name:'commit', value:'Send', class:'submit-btn', data:{disable:{ with:'Send'}}}
