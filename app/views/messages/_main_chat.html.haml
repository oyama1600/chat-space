.chat-main
  .main-header
    .main-header__left-box
      %h2{ class:'main-header__left-box__current-group',data:{group_id:'#'}}
        takeda
      %ul.main-header__left-box__member-list
        Member:
        %li.main-header__left-box__member-list__member
        test 
    =link_to "#" do
      .main-header__edit-btn Edit
  .messages
    %div{ class:'message', data:{message_id:'#'}}
      .message__upper-info
        %p.message__upper-info__talker test
        %p.message__upper-info__date 2020/3/16(mon) 17:40:00
      %p.message__text welcome to JAPAN
    %div{ class:'message', data:{message_id:'#'}}
      .message__upper-info
        %p.message__upper-info__talker test
        %p.message__upper-info__date 2020/3/16(mon) 17:40:40
      %p.message__text thank you


  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'new__message', placeholder: 'type a message'
      .input-box
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'submit-btn'